<section>
  <form action="/edit/task/<%= params["id"] %>" method="post">
    <label for="task">Task:</label>
    <input id="task" type="text" name="task" value="<%= @task["task"] %>">
    <label for="start">Start:</label>
    <input type="datetime-local" id="start" name="start" value="<%= normalize_date_time(@task["start"]) %>">
    <label for="stop">Stop:</label>
    <input type="datetime-local" id="stop" name="stop" value="<%= normalize_date_time(@task["stop"]) %>">
    <label for="project">Project:</label>
    <input type="text" id="project" name="project" value="<%= @task["project"] %>">
    <label for="client">Client:</label>
    <input type="text" id="client" name="client" value="<%= @task["client"] %>">
    <button type="submit">Edit</button>
  </form>
</section>
