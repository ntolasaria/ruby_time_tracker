<section class="recent-projects">
  <p>All tasks:</p>
  <table class="recent-projects-table" cellspacing="0">
    <tr>
      <th>Project</th>
      <th>Client</th>
      <th colspan="2">Actions</th>
    </tr>
    <% paginate_items(@projects, @page) do |project| %>
      <tr>
        <td><%= project["project"] %></td>
        <td><%= project["client"] %></td>
        <td><a id="edit-project" href="/edit/project/<%= project["project_id"] %>">Edit</a></td>
        <td>
          <form class="delete" action="/project/delete" method="post">
            <input type="hidden" name="project_id" value="<%= project["id"] %>">
            <input type="hidden" name="url" value="<%= @current_path %>">
            <input type="submit" value="delete">
          </form>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="page">
  <a href="/projects/all/<%= @page - 1 %>">previous</a><p>... Page <%= @page %> / <%= @page_count %> ...</p><a href="/projects/all/<%= @page + 1 %>">next</a>
  </div>
</section>